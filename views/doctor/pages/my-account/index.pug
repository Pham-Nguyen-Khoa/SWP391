extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error('Không tìm thấy thông tin người dùng.')

    .container(style="margin-top: 100px;")
        h1.text-center.mb-4.page-title Thông tin cá nhân
        .main-body.personal-info-container
            .row.gutters-sm
            
                .col-md-4.mb-3
                    
                    .card.mb-3(style="height: 100%;")
                        .card-body
                            .d-flex.flex-column.align-items-center.text-center.h-100.justify-content-center
                                if (user.Avatar)
                                    img.rounded.circle(src=user.Avatar width='200' height='200' alt='User Avatar' style='object-fit: cover; margin-bottom: 2rem;')
                                else
                                    img.rounded.circle(src="https://via.placeholder.com/200" width='200' height='200' alt='User Avatar' style='object-fit: cover; margin-bottom: 2rem;')
                                .mt-3
                                    h3.mb-3 #{user.FullName || 'Chưa cập nhật'}
                                    p.text-secondary.mb-2.font-weight-bold #{role.RoleName || 'Chưa cập nhật'}
                                    p.text-muted.font-size-sm.mb-4 #{user.Address || 'Chưa cập nhật'}
                                    

                .col-md-8
                    .card.mb-3
                        .card-body
                            .row
                                .col-sm-3
                                    h6.mb-0 Họ tên
                                .col-sm-9.text-secondary
                                    | #{user.FullName || 'Chưa cập nhật'}
                            hr
                            .row
                                .col-sm-3
                                    h6.mb-0 Email
                                .col-sm-9.text-secondary
                                    | #{user.Email || 'Chưa cập nhật'}
                            hr
                            .row
                                .col-sm-3
                                    h6.mb-0 Số điện thoại
                                .col-sm-9.text-secondary
                                    | #{user.PhoneNumber || 'Chưa cập nhật'}
                            hr
                            .row
                                .col-sm-3
                                    h6.mb-0 Địa chỉ
                                .col-sm-9.text-secondary
                                    | #{user.Address || 'Chưa cập nhật'}
                            hr
                            .row
                                .col-sm-3
                                    h6.mb-0 Giới tính
                                .col-sm-9.text-secondary
                                    | #{user.Gender || 'Chưa cập nhật'}
                            hr
                            .row
                                .col-sm-3
                                    h6.mb-0 Link Google Meet
                                .col-sm-9.text-secondary
                                    | #{user.GoogleMeet || 'Chưa cập nhật'}
                            hr
                            .row
                                .col-sm-3
                                    h6.mb-0 Thành tựu
                                .col-sm-9.text-secondary
                                    | #{user.Description || 'Chưa cập nhật'}
                            hr
                            .row
                                .col-sm-3
                                    h6.mb-0 Ngày sinh
                                .col-sm-9.text-secondary
                                    | #{user.Birthday || 'Chưa cập nhật'}
                            hr
                            .row
                                .col-sm-12
                                    a.btn.btn-info(href=`/doctor/my-account/edit`) Chỉnh sửa

   
    style.
        .card {
            border: none;
            box-shadow: 0 12px 24px rgba(0,0,0,0.3), 0 16px 48px rgba(0,0,0,0.25);
            background-color: rgba(255, 255, 255, 0.6);
        }
        .card-body {
            padding: 2.5rem;
        }
        .rounded-circle {
            border: 6px solid #f0f0f0;
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }
        .btn-lg {
            padding: 0.85rem 1.7rem;
            font-size: 1.2rem;
            font-weight: bold;
        }
        .page-title {
            text-shadow: 3px 3px 6px rgba(0,0,0,0.2);
            padding: 20px;
            background-color: rgba(240, 240, 240, 0.6);
            border-radius: 15px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            font-weight: bold;
            color: #333;
            border: 2px solid #ddd;
        }
        .text-secondary {
            font-weight: 600;
        }
        .personal-info-container {
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
            background-color: rgba(248, 249, 250, 0.6);
        }
