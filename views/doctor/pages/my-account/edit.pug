extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success("5000")
    +alert-error('5000')

    .container(style="margin-top: 100px;")
        h1.text-center.mb-4.page-title #{pageTitle}
        .main-body.personal-info-container
                .card.mb-3
                    .card-body
                        form(
                            action=`/doctor/my-account/edit?_method=PATCH`,
                            method="post"
                            enctype="multipart/form-data"
                        )
                            .row
                                .col-md-6
                                    .form-group
                                        label(for="FullName") Họ và Tên *
                                        input.form-control.custom-input(type="text", id="FullName", name="FullName", required, value=user.FullName)
                                    .form-group
                                        label(for="Email") Email *
                                        input.form-control.custom-input(type="text", id="Email", name="Email", value=user.Email, required, disabled)
                                    .form-group
                                        label(for="Description") Thành tựu
                                        input.form-control.custom-input(type="text", id="Description", name="Description", value=user.Description)
                                    .form-group
                                        label(for="GoogleMeet") Link Google Meet
                                        input.form-control.custom-input(type="link", id="GoogleMeet", name="GoogleMeet", value=user.GoogleMeet)
                                .col-md-6
                                    .form-group
                                        label(for="Address") Địa chỉ
                                        input.form-control.custom-input(type="text", id="Address", name="Address", required, value=user.Address)
                                    .form-group
                                        label(for="Password") Password *
                                        input.form-control.custom-input(type="password", id="Password", name="Password", placeholder="Nhập vào thay đổi mật khẩu mới")
                                    .form-group
                                        label(for="PhoneNumber") Số điện thoại
                                        input.form-control.custom-input(type="number", id="PhoneNumber", name="PhoneNumber", value=user.PhoneNumber, required)
                                    .form-group
                                        label(for="Birthday") Ngày sinh
                                        input.form-control.custom-input(type="date", id="Birthday", name="Birthday", value=user.Birthday)
                            .row
                                .col-md-6
                                    .form-group
                                        label(for="Gender") Giới tính
                                        .select-wrapper
                                            select.form-control.custom-input(name="Gender", id="Gender")
                                                option(value="", disabled, selected) --- Lựa chọn ---
                                                option(value="Nam", selected=(user.Gender === "Nam")) Nam
                                                option(value="Nữ", selected=(user.Gender === "Nữ")) Nữ
                                .col-md-6
                                    .form-group(upload-image)
                                        label(for="Avatar") Hình ảnh
                                        input(type="file", id="Avatar", name="Avatar", class="form-control-file", upload-image-input)
                                        small.form-text.text-muted Chỉ chọn file nếu bạn muốn thay đổi ảnh đại diện
                                        img(src=user.Avatar, upload-image-preview, class="upload-preview")
                            .row.mt-3
                                .col-md-6
                                    .form-group
                                        button.button.btn.btn-secondary.btn-block(type="button", onclick="window.location.href='/doctor/my-account'", class="back-button") 
                                            div.button-box
                                                span.button-elem
                                                    svg(viewBox="0 0 46 40" xmlns="http://www.w3.org/2000/svg" ) quay trờ lại
                                                        path(d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z")
                                                span.button-elem
                                                    svg(viewBox="0 0 46 40")
                                                        path(d="M46 20.038c0-.7-.3-1.5-.8-2.1l-16-17c-1.1-1-3.2-1.4-4.4-.3-1.2 1.1-1.2 3.3 0 4.4l11.3 11.9H3c-1.7 0-3 1.3-3 3s1.3 3 3 3h33.1l-11.3 11.9c-1 1-1.2 3.3 0 4.4 1.2 1.1 3.3.8 4.4-.3l16-17c.5-.5.8-1.1.8-1.9z")
                                .col-md-6
                                    .form-group
                                        button(type="submit", class="custom-button-style")
