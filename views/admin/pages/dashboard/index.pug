    script(type="module", src="/admin/js/chart.js")
    script.
        function formatCurrency(amount) {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
        }

        const data = !{JSON.stringify(data)};
        const currentMonth = new Date().getMonth();

        // Tổng số doanh thu và đơn hàng
        const totalAmount = data.totalByMonth.totalAmount[currentMonth];
        const totalOrders = data.totalByMonth.totalOrders[currentMonth];
        document.getElementById('totalAmount').textContent = formatCurrency(totalAmount);
        document.getElementById('totalOrders').textContent = totalOrders;

        // Thông tin cho từng dịch vụ
        const services = ['DV0001', 'DV0002', 'DV0003'];
        const serviceNames = {
            DV0001: 'healthCheck',
            DV0002: 'sterilization',
            DV0003: 'onlineConsultation'
        };

        services.forEach(service => {
            const revenue = data.servicesByMonth[service].totalAmount[currentMonth];
            const orders = data.servicesByMonth[service].totalOrders[currentMonth];
            console.log(revenue);
            console.log(revenue);

            const serviceName = serviceNames[service];
            document.getElementById(`${serviceName}Revenue`).textContent = `${formatCurrency(revenue)}`;
            document.getElementById(`${serviceName}Orders`).textContent = `${orders}`;
        });
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
