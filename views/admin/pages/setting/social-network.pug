extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/mixin-title.pug

block main
    +alert-success("5000")
    +alert-error('5000')
    .mixin-title
            h1.mb-0.font-weight-bold
                i.fas.fa-share-alt.mr-3
                | Cài đặt mạng xã hội
    .block-sider(style="margin-left:180px; margin-right:50px")
        
        .card.shadow-lg(style="border-radius: 20px; border: none; overflow: hidden;")
            .card-header.bg-gradient-primary.text-white.d-flex.justify-content-between.align-items-center(style="border-bottom: none;")
                h2
                button.btn.btn-light.btn-social-network(type="submit")
                    i.fas.fa-save.mr-2
                    | Cập nhật 
            .card-body.bg-white
                form(action="/admin/setting/general/social-network?_method=PATCH" method="POST" id="form-social-network" )
                    .row
                        .col-md-4.mb-4
                            .form-group
                                label.text-primary.font-weight-bold(for="Messenger")
                                    i.fab.fa-facebook-messenger.mr-2
                                    | Messenger
                                .input-group.shadow-sm.rounded-pill.overflow-hidden
                                    .input-group-prepend
                                        span.input-group-text.bg-primary.text-white.border-0(style="width: 50px;")
                                            i.fab.fa-facebook-messenger
                                    input.form-control.border-0#Messenger(type="text" name="Messenger" value=setting.Messenger placeholder="Nhập link Messenger")
                        .col-md-4.mb-4
                            .form-group
                                label.text-primary.font-weight-bold(for="Facebook")
                                    i.fab.fa-facebook.mr-2
                                    | Facebook
                                .input-group.shadow-sm.rounded-pill.overflow-hidden
                                    .input-group-prepend
                                        span.input-group-text.bg-primary.text-white.border-0(style="width: 50px;")
                                            i.fab.fa-facebook-f
                                    input.form-control.border-0#Facebook(type="text" name="Facebook" value=setting.Facebook placeholder="Nhập link Facebook")
                        .col-md-4.mb-4
                            .form-group
                                label.text-danger.font-weight-bold(for="Instagram")
                                    i.fab.fa-instagram.mr-2
                                    | Instagram
                                .input-group.shadow-sm.rounded-pill.overflow-hidden
                                    .input-group-prepend
                                        span.input-group-text.bg-danger.text-white.border-0(style="width: 50px;")
                                            i.fab.fa-instagram
                                    input.form-control.border-0#Instagram(type="text" name="Instagram" value=setting.Instagram placeholder="Nhập link Instagram")
    
    style.
        .card {
            transition: all 0.3s ease;
            transform: translateY(-5px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important;
        }

        .form-group label {
            font-size: 1.1em;
            transition: all 0.3s ease;
        }
        .form-group:hover label {
            transform: translateY(-2px);
        }
        .input-group {
            transition: all 0.3s ease;
        }
        .input-group:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,.1)!important;
        }
        .input-group-text {
            border: none;
        }

        .btn-social-network {
            transition: all 0.3s ease;
        }
        .btn-social-network:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,.15)!important;
        }
        .bg-gradient-primary {
            background: linear-gradient(45deg, #4e73df, #224abe);
        }
        .bg-gradient-danger {
            background: linear-gradient(45deg, #e74a3b, #be2617);
        }
        .input-group-text i {
            font-size: 1.2em;
        }
        .form-control {
        transition: all 0.3s ease;
        padding-left: 15px;
        font-size: 1rem;
        color: #495057;
        }
        .form-control::placeholder {
            color: #6c757d;
            opacity: 1;
        }
        .form-control:focus {
            box-shadow: none;
            background-color: #fff;
            border-color: #80bdff;
        }
        .input-group-text {
            border: none;
            font-size: 1.2rem;
        }
        .input-group {
            background-color: #fff;
        }
        .input-group:hover, .input-group:focus-within {
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }