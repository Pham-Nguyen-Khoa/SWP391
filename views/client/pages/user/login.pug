
extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    +alert-success("5000")
    +alert-error("5000")

    .container-fluid 
        .row(style="height: 100%;")
            .col-7.left-column.p-0 
                img.login-img(src="/images/Login.png" alt="Login image")
            .col-5.right-column(style="padding-top: 150px;")
                .right-container.mt-7 
                    .card.shadow-sm(style="border-radius: 40px; margin-right: 100px;")
                        .card-header(style="background: linear-gradient(to right, #2e87b2, #86d1e7e3); border-top-left-radius: 20px; border-top-right-radius: 20px;")
                            h2.card-title.text-center.mb-3(style="background: linear-gradient(#121313, #5c5f60e3); color: transparent; -webkit-background-clip: text; font-size: 40px;") Đăng nhập
                        .card-body
                            form(action="/auth/login" class="login-form" method="post")
                                .form-group
                                    label(for="Email") Email
                                    input#email.form-control.login-element(type="email" name="Email" required)
                                .form-group
                                    label(for="Password") Password
                                    input#password.form-control.login-element(type="password" name="Password" required)
                                .form-group.utilities
                                    .remember-utilities
                                        input(type="checkbox" name="RememberMe") 
                                        label(for="Remember")(style="margin-left: 10px;") Nhớ tài khoản 
                                    .forgot-utilities
                                        a.text-decoration-none(href="/auth/password/forgot") Quên mật khẩu? 
                                .submit-login(style="display: flex; justify-content: center;")
                                        button.btn.login-button(type="javascript:") Đăng nhập
