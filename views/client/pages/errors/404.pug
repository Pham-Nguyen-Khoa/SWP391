script.
    document.querySelector('.object_earth').addEventListener('mouseover', function(){
        this.classList.add('spin-earth-on-hover');
    })
    document.querySelector('.object_earth').addEventListener('mouseout', function(){
        this.classList.remove('spin-earth-on-hover');
    })