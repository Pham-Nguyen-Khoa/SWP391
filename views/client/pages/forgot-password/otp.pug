extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error("5000")
    +alert-success("5000")


    .block-footer(style="height: 85vh")
        .container-fluid 
            .row(style="height: 100vh;")
                .col-7.left-column(style="padding: 0") 
                    img.login-img(src="/images/Login.png" alt="Login image")
                .col-5.right-column(style="padding: 150px 0 0 50px;")
                    .right-container 
                        .card.shadow-sm(style="border-radius: 40px; margin-right: 100px;")
                            .card-header(style="background: linear-gradient(to right, #2e87b2, #86d1e7e3); border-top-left-radius: 30px; border-top-right-radius: 30px;")
                                h2.card-title.text-center.mb-4(style="background: linear-gradient(#121313, #5c5f60e3); color: transparent; -webkit-background-clip: text; font-size: 40px;") Xác thực OTP
                            .card-body(style="padding: 2rem;")
                                form(
                                action="/auth/password/otp"
                                    method="post"
                                ) 
                                    div(class="form-group")
                                        label(for="email") Email
                                        input(
                                            type="email"
                                            class="form-control"
                                            id="email"
                                            name="email"
                                            value=email
                                            readonly
                                        )
                                    div(class="form-group")
                                        label(for="otp") Mã OTP
                                        input(
                                            type="text"
                                            class="form-control"
                                            id="otp"
                                            name="otp"
                                            required
                                        )
                                    div(class="form-group")     
                                        button(
                                            type="submit"
                                            class="form-control btn btn-primary btn-block"
                                        ) Xác nhận OTP
