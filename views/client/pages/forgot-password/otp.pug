extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-error("5000")
    +alert-success("5000")


    .block-footer(style="height: 100%")
        .container-fluid 
            .row(style="height: 100vh;")
                .col-7.left-column(style="padding: 0") 
                    img.login-img(src="/images/Login.png" alt="Login image")
                .col-5.right-column
                    .right-container(style="position: relative; top: 30%") 
                        .card.shadow-sm(style="border-radius: 10px; margin-right: 100px;")
                            .card-header(style="background: linear-gradient(to right, #2e87b2, #86d1e7e3); border-top-left-radius: 10px; border-top-right-radius: 10px;")
                                h2.card-title.text-center(style="background: linear-gradient(#121313, #5c5f60e3); color: transparent; -webkit-background-clip: text; font-size: 40px;") Xác thực OTP
                            .card-body(style="padding: 2rem 2rem 1rem 2rem;")
                                form(
                                action="/auth/password/otp"
                                    method="post"
                                ) 
                                    .form-group
                                        label(for="email") Email
                                        .input-wrapper
                                            i.fas.fa-envelope.input-icon
                                            input.form-control#email.otp-element(
                                                type="email"
                                                name="email"
                                                value=email
                                                readonly
                                            )
                                    .form-group
                                        label(for="otp") Mã OTP
                                        .input-wrapper
                                            i.fas.fa-key.input-icon
                                            input.form-control#otp.otp-element(
                                                type="text"
                                                name="otp"
                                                required
                                            )
                                    .form-group.pt-3    
                                        button(
                                            type="submit"
                                            class="form-control btn btn-primary btn-block"
                                        ) Xác nhận OTP
                        if resetOtp
                            form(action="/auth/password/forgot" method="post")
                                input(type="hidden" name="email" value=email)
                                button.payment-btn.btn.btn-primary.btn-lg(type="submit" style="border-radius: 5px; background-color: #007bff; border: none; padding: 0.5rem; width: 150px; margin: 20px 35%; display: block;") Gửi lại OTP
                        
