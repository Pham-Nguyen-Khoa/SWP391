extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error("5000")
  +alert-success("5000")
  .container.my-5
    .row.justify-content-center
      .col-md-6
        .card.shadow-sm
          .card-body
            h2.card-title.text-center.mb-4 Lấy lại mật khẩu
            form(action="/auth/password/forgot" method="post")
              .mb-3
                label.form-label(for="email") Email
                input.form-control(
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder="Nhập địa chỉ email của bạn"
                )
              .text-center
                button.btn.btn-primary.btn-lg(type="submit")
                  i.fas.fa-paper-plane.me-2
                  | Gửi email xác nhận
  
