extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/mixin-title.pug
block main
  +alert-error("5000")
  +alert-success("5000")


  .block-footer(style="height: 100%")
    .container-fluid 
      .row(style="height: 100vh; font-size: 1.25rem")
          .col-7.left-column(style="padding: 0") 
              img.login-img(src="/images/Login.png" alt="Login image")
          .col-5.right-column
              .right-container(style="position: relative; top: 35%")
                  .card.shadow-sm(style="border-radius: 10px; margin-right: 100px;")
                    .card-header(style="background: linear-gradient(to right, #2e87b2, #86d1e7e3); border-top-left-radius: 10px; border-top-right-radius: 10px;")
                      h2.card-title.text-center(style="background: linear-gradient(#121313, #5c5f60e3); color: transparent; -webkit-background-clip: text; font-size: 40px;") Khôi phục mật khẩu
                    .card-body(style="padding: 2rem;")
                      form(action="/auth/password/forgot" method="post")
                        .mb-3
                          //label.form-label(for="email") Email
                          .input-wrapper
                            i.fas.fa-envelope.input-icon
                            input.form-control(
                              type="email"
                              id="email"
                              name="email"
                              required
                              placeholder="Nhập địa chỉ email của bạn"
                              style="border-radius: 5px; border: 1px solid #007bff; padding-left: 35px;"
                            )
                        .text-center
                          button.btn.btn-primary.btn-lg(type="submit" style="border-radius: 5px; background-color: #007bff; border: none; padding: 0.5rem")
                            i.fas.fa-paper-plane.me-2
                            | Gửi email xác nhận
